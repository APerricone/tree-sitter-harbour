{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "update",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "update"
        },
        {
            "label": "parse current file",
            "type": "shell",
            "group": "none",
            "command": "parse ${relativeFile}"
        },
        {
            "label": "run tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "runTests"
        }

    ]
}